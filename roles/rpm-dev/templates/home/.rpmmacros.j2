# RPM macros configuration for {{ rpm_dev_user.name }}

# Build directories
%_topdir {{ rpm_build.build_dir }}
%_sourcedir %{_topdir}/SOURCES
%_specdir %{_topdir}/SPECS
%_builddir %{_topdir}/BUILD
%_srcrpmdir %{_topdir}/SRPMS
%_rpmdir %{_topdir}/RPMS

# Packager information
%packager {{ rpm_dev_user.name }} <{{ rpm_dev_user.name }}@{{ ansible_fqdn }}>

# Distribution specific macros
%dist .fc42
%fedora 42

# Build options
%_smp_mflags -j%(nproc)
%__make make %{_smp_mflags}

# Debug package settings
%debug_package %{nil}

