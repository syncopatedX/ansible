[module/sep]
type = custom/text
content = |
content-foreground = {{ colors.yellow0 }}

[module/apps]
type = custom/text

[module/htop]
inherit = module/apps
content = 
content-foreground = {{ colors.green0 }}
click-left = kitty -e htop

[module/governor]
inherit = module/apps
content = 
content-foreground = {{ colors.green0 }}
click-left = echo performance | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor && notify-send -u normal "performance"
click-right = echo powersave | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor && notify-send -u normal "powersave"
;click-middle = tuned-adm profile balanced && notify-send -u normal "balanced"

[module/redshift]
inherit = module/apps
content = 
content-foreground = {{ colors.green0 }}
click-left = redshift -o
click-right = redshift -x

[module/menu]
type = custom/menu
expand-right = true
menu-0-0 ="  Soundcheck"
menu-0-0-foreground = {{ colors.foreground }}
menu-0-0-exec = uxterm -class 'dialog' -e {{ local }}/bin/soundcheck.sh
menu-0-1 =" ‼ backup"
menu-0-1-foreground = {{ colors.foreground }}
menu-0-1-exec = kitty --class 'backup' -e ~/backup.sh
format = <label-toggle><menu>
label-open = 
label-open-foreground = {{ colors.red0 }}
label-open-padding = 1
label-close = 
label-close-foreground = {{ colors.red0 }}
label-close-padding = 1
label-separator = " | "
label-separator-foreground = {{ colors.red0 }}

